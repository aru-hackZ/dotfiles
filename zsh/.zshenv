export PYTHONSTARTUP="$XDG_CONFIG_HOME/python/pyrc"
export PYLINTHOME="$XDG_CONFIG_HOME/pylint.d"

export WAKATIME_HOME="$XDG_CONFIG_HOME/wakatime"

export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"

export GOPATH="$HOME/.local/go"

export GNUPGHOME="$XDG_CONFIG_HOME/gnupg"

export GHCUP_USE_XDG_DIRS="TRUE"

export ZSH="$XDG_CONFIG_HOME/oh-my-zsh"
export ZSH_CUSTOM="$XDG_CONFIG_HOME/oh-my-zsh/custom"
export ZSH_THEME="powerlevel10k"

export LESSHISTFILE="$XDG_CACHE_HOME/less/history"
export LESSHISTSIZE=100

export NODE_REPL_HISTORY="$XDG_CACHE_HOME/npm/repl_history"

export HISTFILE="$XDG_CACHE_HOME/zsh/history"
export HIST_STAMPS="%d/%m/%y %T"
export HISTFILESIZE=1000000
export HISTSIZE=1000000
export HISTORY_IGNORE="([bf]g *|l *|history *|nvim|kak|emacs|-|~|.*)"

export PATH="$PATH:$GOPATH/bin:$XDG_CONFIG_HOME/emacs/bin"

export BAT_THEME="gruvbox-dark"

export DISABLE_UPDATE_PROMPT=true
export UPDATE_ZSH_DAYS=7

export ENABLE_CORRECTION=true
export COMPLETION_WAITING_DOTS=true

export DISABLE_UNTRACKED_FILES_DIRTY=true

export EDITOR='kak'
